.toastr{
    position: fixed;
    right: 33%;
    top: 25%;
    width: 33%;
    box-shadow: rgba(0,0,0,0,0.24) 12px 16px 16px;
    text-align:center;
}

.hide{
    display: none;
}

.show{
    display: block;
}

.paginationFirst{
    margin-left:auto;
}

.paginationLast{
    margin-right:auto;
}

.mt-4{
    margin-top: .8rem !important;
}

.mt-8{
    margin-top: 1.6rem !important;
}

.mt-16{
    margin-top: 3.2rem !important;
}

.shadow{
    box-shadow: 0px 0px 4px;
}

.navline{
    border-bottom 2px solid #0013E6;
}

.light-border{
    border 1px solid lightgray;
}